{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "author": "Bowden Kelly",
    "license": "MIT",
    "main": "dist/server",
    "typings": "dist/server",
    "scripts": {
        "build-sass": "sass src/public/css/main.scss dist/public/css/main.css",
        "build-ts": "tsc",
        "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "debug": "npm run build && npm run watch-debug",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "serve-debug": "nodemon --inspect dist/server.js",
        "serve": "node dist/server.js",
        "start": "npm run serve",
        "test": "jest --forceExit --coverage --verbose",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run serve-debug\"",
        "watch-node": "nodemon dist/server.js",
        "watch-sass": "sass --watch src/public/css/main.scss dist/public/css/main.css",
        "watch-test": "npm run test -- --watchAll",
        "watch-ts": "tsc -w",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-sass\" \"npm run watch-ts\" \"npm run watch-node\"",
        "dev": "tsc-watch --onSuccess \"node ./dist/server.js\""
    },
    "dependencies": {
        "async": "3.2.5",
        "bcrypt-nodejs": "0.0.3",
        "bluebird": "3.7.2",
        "body-parser": "1.20.2",
        "compression": "1.7.4",
        "connect-mongo": "5.1.0",
        "dotenv": "16.4.5",
        "errorhandler": "1.5.1",
        "express": "4.19.2",
        "express-flash": "0.0.2",
        "express-session": "1.18.0",
        "express-validator": "7.0.1",
        "fbgraph": "1.4.4",
        "lodash": "^4.17.21",
        "lusca": "1.7.0",
        "mongoose": "8.4.0",
        "nodemailer": "6.9.13",
        "passport": "0.7.0",
        "passport-facebook": "3.0.0",
        "passport-local": "1.0.0",
        "pug": "3.0.2",
        "tsc-watch": "^6.2.0",
        "winston": "3.13.0"
    },
    "devDependencies": {
        "@types/async": "3.2.24",
        "@types/bcrypt-nodejs": "0.0.31",
        "@types/bluebird": "3.5.42",
        "@types/body-parser": "1.19.5",
        "@types/bson": "4.0.5",
        "@types/chai": "4.3.16",
        "@types/compression": "1.7.5",
        "@types/concurrently": "6.4.0",
        "@types/errorhandler": "1.5.3",
        "@types/eslint": "8.56.10",
        "@types/express": "4.17.21",
        "@types/express-flash": "0.0.5",
        "@types/express-session": "1.18.0",
        "@types/jest": "^29.5.12",
        "@types/jquery": "3.5.30",
        "@types/lodash": "^4.17.4",
        "@types/lusca": "1.7.5",
        "@types/mongodb": "4.0.6",
        "@types/node": "^20.12.12",
        "@types/nodemailer": "6.4.15",
        "@types/passport": "1.0.16",
        "@types/passport-facebook": "3.0.3",
        "@types/passport-local": "1.0.38",
        "@types/pug": "2.0.10",
        "@types/request": "2.48.12",
        "@types/request-promise": "4.1.51",
        "@types/shelljs": "0.8.15",
        "@types/supertest": "6.0.2",
        "@types/winston": "2.4.4",
        "@typescript-eslint/eslint-plugin": "7.9.0",
        "@typescript-eslint/parser": "7.9.0",
        "chai": "5.1.1",
        "concurrently": "8.2.2",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "sass": "1.77.2",
        "shelljs": "0.8.5",
        "supertest": "7.0.0",
        "ts-jest": "^29.1.2",
        "ts-node": "10.9.2",
        "typescript": "5.4.5"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
